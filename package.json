{
  "name": "EOS-Desktop",
  "version": "1.0.0-alpha.1",
  "description": "An intergrated graphic user interface for the EOS Blockchain.",
  "author": "EOS Desktop <contact@eosdesktop.io>",
  "main": "electron.js",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/errickbensonpeart/eos-desktop"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "mocha ./electron",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "electron-build": "ng build --prod && electron .",
    "production-build": "ng build --prod",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release-windows": "npm run production-build && electron-builder --win",
    "release-linux": "npm run production-build && electron-builder --linux",
    "release-mac": "npm run production-build && electron-builder --mac"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "angular2-draggable": "^2.1.2",
    "bluebird": "^3.5.1",
    "core-js": "^2.5.4",
    "eosjs": "^16.0.6",
    "nedb": "^1.8.0",
    "ngx-electron": "^1.0.4",
    "psl": "^1.1.29",
    "rxjs": "^6.0.0",
    "scatter-js": "^2.5.1",
    "stream": "0.0.2",
    "url-parse": "^1.4.3",
    "ws": "^6.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "~6.1.4",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "chai": "^4.1.2",
    "chance": "^1.0.16",
    "codelyzer": "~4.2.1",
    "electron": "2.0.8",
    "electron-builder": "^20.28.3",
    "electron-installer-dmg": "^2.0.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.18.3",
    "protractor": "~5.4.0",
    "sinon": "^6.3.3",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  },
  "build": {
    "productName": "EOS Desktop",
    "appId": "com.eos.desktop.io",
    "asar": true,
    "files": [
      "dist/**/**/*",
      "electron.js",
      "package.json"
    ],
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "EOS Desktop"
    },
    "directories": {
      "output": "release"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "linux": {
      "category": "Blockchain",
      "desktop": {
        "Name": "EOS Desktop",
        "GenericName": "EOS Desktop",
        "Type": "Application",
        "Terminal": "false",
        "StartupNotify": "false",
        "Categories": "Blockchain"
      },
      "target": "AppImage"
    }
  }
}
